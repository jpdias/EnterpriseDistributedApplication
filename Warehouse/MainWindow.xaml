<Window x:Class="Warehouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:warehouse="clr-namespace:Warehouse"
        xmlns:enterpriseDistributedApplication="clr-namespace:EnterpriseDistributedApplication;assembly=EnterpriseDistributedApplication"
        xmlns:local="clr-namespace:Warehouse"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <ListBox Name="listBoxZone" ItemsSource="{Binding Source={x:Static local:MainWindow.TheList}}" Background="Azure" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="enterpriseDistributedApplication:Book">
                    <CheckBox Name="CheckBoxZone" Content="{Binding Title}" Checked="CheckBoxZone_Checked"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
